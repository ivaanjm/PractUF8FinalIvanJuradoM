<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentVideo">

    <VideoView
        android:id="@+id/video"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp" />



    <ImageButton
        android:id="@+id/play"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/video"
        android:layout_alignLeft="@id/video"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_play" />

    <TextView
        android:id="@+id/playtxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@id/play"
        android:layout_toRightOf="@id/play"
        android:text="Reproducir"
        android:textSize="20sp" />


    <ImageButton
        android:id="@+id/pause"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/video"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="11dp"
        android:layout_toLeftOf="@id/pausetxt"
        android:src="@drawable/ic_pause" />

    <TextView
        android:id="@+id/pausetxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video"
        android:layout_alignEnd="@id/video"
        android:layout_alignRight="@id/video"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Pausar"
        android:textSize="20sp" />
</RelativeLayout>